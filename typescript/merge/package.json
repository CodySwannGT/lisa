{
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --quiet --cache --fix"
    ],
    "*.{js,ts,jsx,tsx,html,css,scss,yaml,yml,graphql}": [
      "prettier --write"
    ]
  },
  "engines": {
    "npm": "please-use-bun",
    "yarn": "please-use-bun",
    "bun": ">= 1.3.5",
    "node": "22.21.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "//docs": "The following commands MUST be defined for CI/CD to work properly - even if they're no-ops.",
    "lint": "eslint . --quiet",
    "lint:fix": "eslint . --fix",
    "lint:slow": "eslint . --config eslint.slow.config.mjs --quiet",
    "build": "tsc --noEmit",
    "test": "echo 'No test runner configured'",
    "test:unit": "echo 'No test runner configured'",
    "test:integration": "echo 'No test runner configured'",
    "test:cov": "echo 'No test runner configured'",
    "types:check": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "format:check": "prettier --check .",
    "format": "prettier --check . --write",
    "prepare": "node -e \"if (process.env.INIT_CWD && process.env.INIT_CWD.includes('.serverless')) { process.exit(0); }\" && husky install || true",
    "//end-docs": ""
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.39.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-import-resolver-typescript": "^4.0.0",
    "eslint-plugin-code-organization": "file:./eslint-plugin-code-organization",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-functional": "^9.0.0",
    "eslint-plugin-jsdoc": "^61.5.0",
    "eslint-plugin-prettier": "^5.5.0",
    "eslint-plugin-sonarjs": "^3.0.0",
    "husky": "^8.0.0",
    "jscodeshift": "0.15.2",
    "lint-staged": "^16.2.7",
    "prettier": "^3.3.3",
    "standard-version": "^9.5.0",
    "ts-morph": "^27.0.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.0.0"
  },
  "resolutions": {},
  "trustedDependencies": [
    "@sentry/cli"
  ]
}
