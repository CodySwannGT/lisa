{
  "scripts": {
    "//docs": "The following commands MUST be defined for CI/CD to work properly - even if they're no-ops.",
    "lint": "eslint . --quiet",
    "lint:fix": "eslint . --fix",
    "build": "tsc",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:cov": "vitest run --coverage",
    "types:check": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "format:check": "prettier --check .",
    "format": "prettier --check . --write",
    "prepare": "npm run build && husky install || true",
    "//end-docs": "",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test:watch": "vitest",
    "update-node-version": "tsx scripts/update-node-version.ts",
    "cleanup:amplify-branches": "bash scripts/cleanup-amplify-branches.sh",
    "cleanup:github-branches": "bash scripts/cleanup-github-branches.sh",
    "github:status": "bash scripts/github-status-check.sh",
    "setup:deploy-key": "bash scripts/setup-deploy-key.sh",
    "lint:slow": "eslint . --config eslint.slow.config.ts --quiet",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "sg:scan": "ast-grep scan",
    "lisa:update": "npx @codyswann/lisa@latest ."
  },
  "devDependencies": {
    "@ast-grep/cli": "^0.40.4",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.39.0",
    "@types/fs-extra": "^11.0.0",
    "@types/lodash.merge": "^4.6.0",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^3.0.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-code-organization": "file:./eslint-plugin-code-organization",
    "eslint-plugin-functional": "^9.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^61.5.0",
    "eslint-plugin-prettier": "^5.5.0",
    "eslint-plugin-sonarjs": "^3.0.0",
    "husky": "^8.0.0",
    "jiti": "^2.4.0",
    "jscodeshift": "0.15.2",
    "knip": "^5.82.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.3.3",
    "standard-version": "^9.5.0",
    "tsx": "^4.0.0",
    "typescript": "~5.7.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "npm": "please-use-bun",
    "yarn": "please-use-bun",
    "pnpm": "please-use-bun",
    "bun": ">= 1.3.5",
    "node": "22.21.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "resolutions": {},
  "trustedDependencies": [
    "@sentry/cli",
    "@ast-grep/cli"
  ],
  "name": "@codyswann/lisa",
  "version": "1.9.2",
  "description": "Claude Code governance framework that applies guardrails, guidance, and automated enforcement to projects",
  "main": "dist/index.js",
  "bin": {
    "lisa": "dist/index.js"
  },
  "keywords": [
    "claude",
    "claude-code",
    "governance",
    "linting",
    "configuration"
  ],
  "author": "Cody Swann",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodySwannGT/lisa.git"
  },
  "bugs": {
    "url": "https://github.com/CodySwannGT/lisa/issues"
  },
  "homepage": "https://github.com/CodySwannGT/lisa#readme",
  "dependencies": {
    "@inquirer/prompts": "^7.0.0",
    "commander": "^12.0.0",
    "fs-extra": "^11.0.0",
    "lodash.merge": "^4.6.2",
    "minimatch": "^10.1.1",
    "picocolors": "^1.0.0"
  },
  "files": [
    "dist",
    "all",
    "typescript",
    "expo",
    "nestjs",
    "cdk",
    "eslint-plugin-code-organization"
  ],
  "type": "module"
